---
import { Icon } from "astro-icon/components";

const currentPath = new URL(Astro.request.url).pathname.slice(1);
---

<header class="fixed top-0 left-0 right-0 z-50 py-4 px-6 md:px-12 lg:px-16 md:bg-background/90 md:backdrop-blur-sm md:shadow-sm">
  <div class="max-w-screen-xl mx-auto flex justify-center items-center">
    <nav class="hidden md:flex space-x-8 lg:space-x-16">
      <a href="/" class={`text-sm uppercase tracking-widest font-light transition-colors ${currentPath === "" ? "text-accent border-b-2 border-accent" : "text-text/70 hover:text-accent"}`}>
        Home
      </a>
      <a href="/about" class={`text-sm uppercase tracking-widest font-light transition-colors ${currentPath === "about" ? "text-accent border-b-2 border-accent" : "text-text/70 hover:text-accent"}`}>
        About
      </a>
      <a href="/works" class={`text-sm uppercase tracking-widest font-light transition-colors ${currentPath === "works" ? "text-accent border-b-2 border-accent" : "text-text/70 hover:text-accent"}`}>
        Works
      </a>
    </nav>
  </div>

  <!-- Mobile menu toggle floating button -->
  <div class="md:hidden fixed bottom-6 right-6 z-40">
    <button id="menu-toggle" class="border-2 border-accent text-accent hover:bg-accent/10 rounded-full w-10 h-10 sm:w-12 sm:h-12 flex items-center justify-center shadow-lg transition-colors bg-background">
      <Icon name="mdi:menu" class="h-5 w-5 sm:h-6 sm:w-6" />
    </button>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="mobile-menu-overlay fixed inset-0 md:hidden bg-background/95 backdrop-blur-md z-50 flex flex-col">
    <div class="fixed bottom-6 right-6 z-[51]">
      <button id="close-menu" class="border-2 border-accent text-accent hover:bg-accent/10 rounded-full w-10 h-10 sm:w-12 sm:h-12 flex items-center justify-center shadow-lg transition-colors bg-background">
        <Icon name="mdi:close" class="icon-responsive-lg" />
      </button>
    </div>
    <div class="flex-1 flex items-center justify-center">
      <div class="px-6 py-6 sm:py-8 flex flex-col space-y-6 sm:space-y-8 text-center">
      <a href="/" class={`text-responsive-lg font-light transition-colors ${currentPath === "" ? "text-accent" : "text-text/70 hover:text-accent"}`}>
        Home
      </a>
      <a href="/about" class={`text-responsive-lg font-light transition-colors ${currentPath === "about" ? "text-accent" : "text-text/70 hover:text-accent"}`}>
        About
      </a>
      <a href="/works" class={`text-responsive-lg font-light transition-colors ${currentPath === "works" ? "text-accent" : "text-text/70 hover:text-accent"}`}>
        Works
      </a>
      </div>
    </div>
  </div>
</header>

<style>
  .mobile-menu-overlay {
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .mobile-menu-overlay.is-open {
    opacity: 1;
    pointer-events: auto;
  }

  .mobile-menu-overlay .flex-1 {
    transform: translateY(12px);
    transition: transform 0.3s ease;
  }

  .mobile-menu-overlay.is-open .flex-1 {
    transform: translateY(0);
  }
</style>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const closeButton = document.getElementById('close-menu');

  function setMenuOpen(open: boolean) {
    mobileMenu?.classList.toggle('is-open', open);
    document.body.style.overflow = open ? 'hidden' : '';
  }

  menuToggle?.addEventListener('click', () => setMenuOpen(true));
  closeButton?.addEventListener('click', () => setMenuOpen(false));

  window.addEventListener('resize', () => {
    if (window.innerWidth >= 768) {
      setMenuOpen(false);
    }
  });
</script>
