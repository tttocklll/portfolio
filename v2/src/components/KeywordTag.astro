---
interface Props {
  icon: string;
  text: string;
}

const { icon, text } = Astro.props;
import { Icon } from "astro-icon/components";
---

<div class="flex items-center bg-white/70 rounded-full px-3 py-1.5 shadow-sm hover:bg-white hover:shadow transition-all">
  <Icon name={icon} class="w-3.5 h-3.5 text-accent mr-1.5" />
  <span class="text-sm text-text/80 font-light">{text}</span>
</div>
