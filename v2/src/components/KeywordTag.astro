---
interface Props {
  icon: string;
  text: string;
}

const { icon, text } = Astro.props;
import { Icon } from "astro-icon/components";
---

<div class="flex items-center bg-white/70 rounded-full px-4 py-2 shadow-sm hover:bg-white hover:shadow transition-all">
  <Icon name={icon} class="w-4 h-4 text-accent mr-2" />
  <span class="text-text/80 font-light">{text}</span>
</div>
