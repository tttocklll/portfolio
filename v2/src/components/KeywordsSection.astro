---
import { Icon } from "astro-icon/components";
import KeywordTag from "./KeywordTag.astro";

interface KeywordItem {
  icon: string;
  text: string;
}

interface Props {
  keywords: KeywordItem[];
}

const { keywords } = Astro.props;
---

<div>
  <p class="text-sm sm:text-base text-text/70 font-extralight flex items-center mb-2 sm:mb-3">
    <Icon name="mdi:star" class="w-3 h-3 sm:w-4 sm:h-4 text-accent/60 mr-1.5 sm:mr-2" />
    興味のキーワード:
  </p>
  <div class="flex flex-wrap gap-1.5 sm:gap-2 ml-4 sm:ml-6">
    {keywords.map((keyword) => (
      <KeywordTag icon={keyword.icon} text={keyword.text} />
    ))}
  </div>
</div>
