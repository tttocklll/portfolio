---
import { Icon } from "astro-icon/components";
import KeywordTag from "./KeywordTag.astro";

interface KeywordItem {
  icon: string;
  text: string;
}

interface Props {
  keywords: KeywordItem[];
}

const { keywords } = Astro.props;
---

<div>
  <p class="text-responsive-base text-text/70 font-extralight flex items-center mb-responsive-sm">
    <Icon name="mdi:star" class="icon-responsive-sm text-accent/60 mr-responsive-sm" />
    興味のキーワード:
  </p>
  <div class="flex flex-wrap gap-responsive-sm ml-responsive-base">
    {keywords.map((keyword) => (
      <KeywordTag icon={keyword.icon} text={keyword.text} />
    ))}
  </div>
</div>
