---
// LinkButton.astro
const { text, href, icon } = Astro.props;
---

<a
  href={href}
  class="flex flex-col items-center justify-center p-6 bg-white rounded-xl hover:shadow-md transition-all duration-300 border border-accent/10 hover:border-accent/30 group"
  target={href.startsWith("http") ? "_blank" : undefined}
>
  <h3 class="text-xl font-light text-accent mb-3 group-hover:text-accent/80">
    {text}
  </h3>
  <span class="text-accent/60 group-hover:text-accent transition-colors">
    <Fragment set:html={icon} />
  </span>
</a>
