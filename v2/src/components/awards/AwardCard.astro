---
export interface Props {
  title: string;
  badge?: string;
  date: string;
  description: string;
  link?: {
    href: string;
    text: string;
  };
}

const { title, badge, date, description, link } = Astro.props;
---

<div class="card-bg">
  <div class="p-6">
    <div class="flex justify-between items-start mb-4">
      <h3 class="text-lg font-medium text-accent">{title}</h3>
      {badge && (
        <span class="text-xs font-light bg-accent/10 text-accent px-2 py-1 rounded-full">{badge}</span>
      )}
    </div>
    <time class="block mb-3 text-sm font-light text-text/60">{date}</time>
    <p class="text-text/80 text-sm">
      {description}
      {link && (
        <a href={link.href} class="text-accent hover:underline text-xs ml-1">
          {link.text}
        </a>
      )}
    </p>
  </div>
</div>
