---
import { Icon } from "astro-icon/components";

export interface Props {
  title: string;
  badge?: string;
  date: string;
  description: string;
  link?: string;
}

const { title, badge, date, description, link } = Astro.props;
---

<div class="card-bg">
  <div class="card-padding">
    <div class="flex justify-between items-start mb-responsive-sm">
      <h3 class="text-responsive-lg font-medium text-accent">
        {link ? (
          <a href={link} class="hover:underline items-center" target="_blank" rel="noopener noreferrer">
            {title}
            <Icon name="mdi:open-in-new" class="inline-block icon-responsive-base" />
          </a>
        ) :
          title
        }
      </h3>
      {badge && (
        <span class="text-responsive-base font-light bg-accent/10 text-accent px-1.5 sm:px-2 py-0.5 sm:py-1 rounded-full">{badge}</span>
      )}
    </div>
    <time class="block mb-responsive-sm text-responsive-base font-light text-text/60">{date}</time>
    <p class="text-text/80 text-responsive-base">
      {description}
    </p>
  </div>
</div>
