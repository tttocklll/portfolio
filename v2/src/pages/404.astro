---
import { Icon } from "astro-icon/components";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Page Not Found | Tokiya's Portfolio">
  <Header />
  
  <main class="container mx-auto px-8 pt-24">
    <section class="min-h-[80vh] flex flex-col items-center justify-center py-16">
      <div class="text-center max-w-2xl mx-auto">
        <div class="mb-8">
          <Icon name="mdi:alert-circle-outline" class="w-24 h-24 text-accent mx-auto" />
        </div>
        
        <h1 class="text-6xl font-light mb-6 text-accent">
          404
        </h1>
        
        <h2 class="text-3xl font-light text-text mb-4">
          Page Not Found
        </h2>
        
        <p class="text-lg text-text/80 mb-8">
          The page you're looking for doesn't exist or has been moved.
        </p>
        
        <a href="/" class="inline-flex items-center px-6 py-3 bg-white text-accent border border-accent/30 font-light rounded-lg hover:bg-background transition-all duration-300">
          <Icon name="mdi:home" class="w-5 h-5 mr-2" />
          Back to Home
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout> 