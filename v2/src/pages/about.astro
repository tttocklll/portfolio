---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Profile from "../components/Profile.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="About | Tokiya's Portfolio">
  <Header />

  <main class="container mx-auto px-8 pt-24">
    <!-- Hero Section -->
    <section class="py-16">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl text-gold mb-8">About Me</h1>
      </div>
    </section>

    <!-- Timeline Section -->
    <section class="py-8">
      <div class="max-w-4xl mx-auto">
        <ol class="relative border-l border-accent/30">
          <li class="mb-10 ml-6">
            <span class="absolute flex items-center justify-center w-6 h-6 bg-white rounded-full -left-3 ring-8 ring-background">
              <div class="w-2 h-2 rounded-full bg-accent"></div>
            </span>
            <h3 class="flex items-center mb-1 text-lg font-semibold text-text">
              静岡県生まれ
            </h3>
            <time class="block mb-2 text-sm font-normal leading-none text-text/60">1999/11/02</time>
          </li>

          <li class="mb-10 ml-6">
            <span class="absolute flex items-center justify-center w-6 h-6 bg-white rounded-full -left-3 ring-8 ring-background">
              <div class="w-2 h-2 rounded-full bg-accent"></div>
            </span>
            <h3 class="flex items-center mb-1 text-lg font-semibold text-text">
              静岡県立浜松北高校 入学
            </h3>
            <time class="block mb-2 text-sm font-normal leading-none text-text/60">2015/04</time>
          </li>

          <li class="mb-10 ml-6">
            <span class="absolute flex items-center justify-center w-6 h-6 bg-white rounded-full -left-3 ring-8 ring-background">
              <div class="w-2 h-2 rounded-full bg-accent"></div>
            </span>
            <h3 class="flex items-center mb-1 text-lg font-semibold text-text">
              東京大学 教養学部 文科II類 入学
            </h3>
            <time class="block mb-2 text-sm font-normal leading-none text-text/60">2018/04</time>
          </li>

          <li class="mb-10 ml-6">
            <span class="absolute flex items-center justify-center w-6 h-6 bg-white rounded-full -left-3 ring-8 ring-background">
              <div class="w-2 h-2 rounded-full bg-accent"></div>
            </span>
            <h3 class="flex items-center mb-1 text-lg font-semibold text-text">
              東京大学 工学部 <a href="https://www.ee.t.u-tokyo.ac.jp/" class="text-accent hover:text-text transition-colors">電子情報工学科</a> 進学
            </h3>
            <time class="block mb-2 text-sm font-normal leading-none text-text/60">2020/04</time>
            <p class="mb-2 text-text/80">
              - <a href="https://www.gavo.t.u-tokyo.ac.jp/" class="font-medium text-accent hover:text-text transition-colors">峯松研究室</a> 所属
            </p>
            <p class="mb-2 text-text/80">
              - 2022年度 <span class="font-medium text-accent">工学部長賞 (研究)</span> 受賞
            </p>
            <p class="mb-2 text-text/80">
              - 卒業論文: 「咽喉マイクを用いた 背景雑音に頑健な 英語シャドーイング音声の自動評価」
            </p>
            <p class="mb-2 text-text/80">
              - 株式会社Stroboでインターン
            </p>
          </li>

          <li class="ml-6">
            <span class="absolute flex items-center justify-center w-6 h-6 bg-white rounded-full -left-3 ring-8 ring-background">
              <div class="w-2 h-2 rounded-full bg-accent"></div>
            </span>
            <h3 class="flex items-center mb-1 text-lg font-semibold text-text">
              日本マイクロソフト株式会社 入社
            </h3>
            <time class="block mb-2 text-sm font-normal leading-none text-text/60">2022/04</time>
            <p class="text-text/80">
              - Microsoft Teams サポート エンジニア
            </p>
          </li>
        </ol>
      </div>
    </section>

    <!-- Awards Section -->
    <section class="py-16">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-light text-text mb-8">Awards</h2>

        <div class="overflow-x-auto">
          <table class="min-w-full bg-white rounded-xl shadow-sm">
            <thead class="border-b border-text/10">
              <tr>
                <th class="py-4 px-6 text-left text-lg font-medium text-text/60">Year / Month</th>
                <th class="py-4 px-6 text-left text-lg font-medium text-text/60">Award</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-text/10">
              <tr class="hover:bg-background">
                <td class="py-4 px-6 text-text/60">2020/09</td>
                <td class="py-4 px-6 font-medium text-text">アントレプレナーシップ・チャレンジ2020 第3位</td>
              </tr>
              <tr class="hover:bg-background">
                <td class="py-4 px-6 text-text/60">2022/03</td>
                <td class="py-4 px-6 font-medium text-text">東京大学 工学部長賞 (研究)</td>
              </tr>
              <tr class="hover:bg-background">
                <td class="py-4 px-6 text-text/60">2022/09</td>
                <td class="py-4 px-6 font-medium text-text">
                  日本音響学会 第24回 学生優秀発表賞
                  (<a href="#" class="text-accent hover:text-text transition-colors inline-flex items-center">
                    Link
                  </a>)
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <!-- Profile Section -->
    <Profile />
  </main>

  <Footer />
</Layout>