---
import ProfileCard from "../components/ProfileCard.astro";
import AwardCard from "../components/awards/AwardCard.astro";
import SkillCard from "../components/skills/SkillCard.astro";
import TimelineItem from "../components/timeline/TimelineItem.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="About | tttocklll">
  <main>
    <!-- Hero Section -->
    <section class="min-h-[15vh] sm:min-h-[20vh] flex flex-col items-center justify-center py-8 sm:py-12 md:py-16 mt-12 md:mt-16 relative">
      <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
      <div class="absolute right-0 top-0 w-96 h-96 bg-accent/5 rounded-full blur-3xl -z-10 transform translate-x-1/3 -translate-y-1/3"></div>
      <div class="text-center max-w-4xl mx-auto px-3 sm:px-6 relative z-10">
        <h1 class="text-3xl sm:text-4xl font-extralight text-accent opacity-90">About</h1>
      </div>
    </section>

    <!-- Profile Section -->
    <section class="py-8 sm:py-12 relative overflow-hidden">
      <div class="absolute left-0 bottom-1/4 w-64 h-64 bg-accent/3 rounded-full blur-3xl -z-10 transform -translate-x-1/2"></div>
      <div class="max-w-4xl mx-auto px-3 sm:px-6 relative z-10">
        <h2 class="text-xl sm:text-2xl font-extralight text-text/80 mb-8 sm:mb-12 md:mb-16">Profile</h2>
        <ProfileCard />
      </div>
    </section>

    <!-- Timeline Section -->
    <section class="py-8 sm:py-12 relative overflow-hidden">
      <div class="absolute right-0 top-1/3 w-80 h-80 bg-accent/3 rounded-full blur-3xl -z-10 transform translate-x-1/3"></div>
      <div class="max-w-4xl mx-auto px-3 sm:px-6 relative z-10">
        <h2 class="text-xl sm:text-2xl font-extralight text-text/80 mb-8 sm:mb-12 md:mb-16">Timeline</h2>

        <ol class="relative border-l border-accent/30">
          <TimelineItem
            title="静岡県生まれ"
            startDate="1999/11/02"
            details={[
              {
                icon: "mdi:map-marker-outline",
                content: "袋井市で生まれ、浜松市で育つ"
              }
            ]}
          />
          <TimelineItem
            title="静岡県立浜松北高校"
            startDate="2015/04"
            endDate="2018/03"
            details={[
              {
                icon: "mdi:volleyball",
                content: "バレーボール部に所属"
              },
              {
                icon: "mdi:star-face",
                content: "勉強も部活も行事も遊びも全力で楽しんだ"
              }
            ]}
          />
          <TimelineItem
            title="東京大学 教養学部 文科二類"
            startDate="2018/04"
            endDate="2020/03"
            details={[
              {
                icon: "mdi:book-open-outline",
                content: "経済学部を目指して入学"
              },
              {
                icon: "mdi:bird",
                content: "アルバイト先（鳥貴族）を通じてプログラミングやAIに強い関心を持つようになる"
              }
            ]}
          />
          <TimelineItem
            title="東京大学 工学部 電子情報工学科"
            startDate="2020/04"
            endDate="2022/03"
            details={[
              {
                icon: "mdi:school-outline",
                content: "峯松研究室",
                isLink: true,
                href: "https://www.gavo.t.u-tokyo.ac.jp/"
              },
              {
                icon: "mdi:trophy-outline",
                content: "2022年度 <span class=\"text-accent\">工学部長賞 (研究)</span> 受賞"
              },
              {
                icon: "mdi:file-document-outline",
                content: "卒業論文: 「咽喉マイクを用いた 背景雑音に頑健な 英語シャドーイング音声の自動評価」"
              },
              {
                icon: "mdi:briefcase-outline",
                content: "株式会社Stroboでインターン"
              }
            ]}
          />

          <TimelineItem
            title="日本マイクロソフト株式会社"
            startDate="2022/04"
            endDate="2023/04"
            details={[
              {
                icon: "mdi:microsoft",
                content: "サポートエンジニア"
              },
              {
                icon: "mdi:information-outline",
                content: "Microsoft Teams のテクニカルサポート、障害等のトラブル対応"
              }
            ]}
          />
          <TimelineItem
            title="株式会社FLYWHEEL"
            startDate="2023/05"
            endDate="2024/07"
            details={[
              {
                icon: "mdi:code-tags",
                content: "ソフトウェアエンジニア"
              },
              {
                icon: "mdi:laptop",
                content: "企業向け SaaS の開発（フロントエンド）"
              },
              {
                icon: "mdi:brain",
                content: "LLM を利用したサービスの PoC 開発（バックエンド、フロントエンド）"
              }
            ]}
          />
          <TimelineItem
            title="株式会社picon"
            startDate="2024/08"
            isLast={true}
            details={[
              {
                icon: "mdi:code-tags",
                content: "シニアソフトウェアエンジニア"
              },
              {
                icon: "mdi:brain",
                content: "AI（主にLLM）を利用したサービスの開発（バックエンド、フロントエンド）"
              },
              {
                icon: "mdi:lightbulb-outline",
                content: "新規アプリ開発（バックエンド、フロントエンド、機械学習）"
              }
            ]}
          />
        </ol>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="py-12 md:py-16 relative overflow-hidden">
      <div class="absolute left-0 top-1/2 w-72 h-72 bg-accent/3 rounded-full blur-3xl -z-10 transform -translate-x-1/3"></div>
      <div class="max-w-4xl mx-auto px-3 sm:px-6 relative z-10">
        <h2 class="text-2xl font-extralight text-text/80 mb-16">Skills</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <SkillCard
            title="Programming"
            icon="mdi:code-tags"
            skills={[
              "JavaScript / TypeScript",
              "Python",
              "C / C++",
              "HTML / CSS",
              "SQL"
            ]}
          />

          <SkillCard
            title="Frameworks & Libraries"
            icon="mdi:web"
            skills={[
              "React / Next.js",
              "Astro",
              "TailwindCSS",
              "Node.js / Express",
              "PyTorch / TensorFlow"
            ]}
          />

          <SkillCard
            title="Tools & Platforms"
            icon="mdi:tools"
            skills={[
              "Git / GitHub",
              "Docker",
              "AWS / Azure",
              "Linux / Unix",
              "VSCode / JetBrains IDE"
            ]}
          />
        </div>
      </div>
    </section>

    <!-- Awards Section -->
    <section class="py-8 sm:py-12 md:py-16 relative overflow-hidden">
      <div class="absolute right-0 bottom-1/4 w-64 h-64 bg-accent/3 rounded-full blur-3xl -z-10 transform translate-x-1/3"></div>
      <div class="max-w-4xl mx-auto px-3 sm:px-6 relative z-10">
        <h2 class="text-xl sm:text-2xl font-extralight text-text/80 mb-8 sm:mb-12 md:mb-16">Awards</h2>

        <!-- 横に並べるのは最大2つ -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <AwardCard
            title="KDH CUP 第1回プログラミング大会 優勝"
            date="2023/12"
            description="KDDI Digital Divergence Holdings グループ全体のプログラミングコンテストにて優勝。"
            link="https://www.flywheel.jp/topics/kdhcup_programming_contest01/"
          />
          <AwardCard
            title="日本音響学会 学生優秀発表賞"
            date="2022/09"
            description="音声処理技術に関する研究発表が評価され、日本音響学会より学生優秀発表賞を受賞。"
            link="https://www.ee.t.u-tokyo.ac.jp/news/%E9%9B%BB%E5%AD%90%E6%83%85%E5%A0%B1%E5%B7%A5%E5%AD%A6%E7%A7%914%E5%B9%B4-%E7%99%BA%E8%A1%A8%E5%BD%93%E6%99%82-%E5%A4%A7%E6%9D%91%E7%9E%AC%E4%B9%9F%E3%81%95%E3%82%93%E3%81%8C%E9%9F%B3%E9%9F%BF%E5%AD%A6%E4%BC%9A-%E6%98%A5%E5%AD%A3%E7%A0%94%E7%A9%B6%E7%99%BA%E8%A1%A8%E4%BC%9A-%E5%AD%A6%E7%94%9F%E5%84%AA%E7%A7%80%E7%99%BA%E8%A1%A8%E8%B3%9E%E3%82%92%E5%8F%97%E8%B3%9E%E3%81%97%E3%81%BE%E3%81%97%E3%81%9F/"
          />
          <AwardCard
            title="東京大学 工学部長賞（研究）"
            date="2022/03"
            description="卒業研究「咽喉マイクを用いた背景雑音に頑健な英語シャドーイング音声の自動評価」に対して授与。"
          />
          <AwardCard
            title="アントレプレナーシップ・チャレンジ2020"
            date="2020/09"
            description="学生向けのビジネスコンテストで、学校現場における生徒のメンタルヘルスケアアプリ「Moodify」を提案し、第3位を受賞。"
          />
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Add custom animations for timeline items */
  .timeline-item {
    transition: all 0.3s ease;
  }

  .timeline-item:hover {
    transform: translateX(5px);
  }

  /* Grid pattern background */
  .bg-grid-pattern {
    background-image:
      linear-gradient(to right, var(--color-accent-muted) 1px, transparent 1px),
      linear-gradient(to bottom, var(--color-accent-muted) 1px, transparent 1px);
    background-size: 20px 20px;
  }

  /* Section subtle decoration */
  section {
    position: relative;
  }

  section::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-accent-muted) 20%, var(--color-accent-muted) 80%, transparent);
    opacity: 0.1;
    bottom: 0;
  }

  /* Mobile-specific styles */
  @media (max-width: 768px) {
    h1.text-4xl {
      font-size: 2rem;
    }

    /* Adjust spacing between sections */
    section {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
  }
</style>
