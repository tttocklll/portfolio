---
import { Icon } from "astro-icon/components";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import ProfileCard from "../components/ProfileCard.astro";
import Layout from "../layouts/Layout.astro";
import { TimelineItem } from "../components/timeline";
import { SkillCard } from "../components/skills";
import { AwardCard } from "../components/awards";
---

<Layout title="About">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="min-h-[20vh] flex flex-col items-center justify-center py-16 mt-16">
      <div class="text-center max-w-4xl mx-auto px-6">
        <h1 class="text-4xl font-extralight text-accent opacity-90">About</h1>
      </div>
    </section>

    <!-- Profile Section -->
    <section class="py-12">
      <div class="max-w-4xl mx-auto px-6">
        <h2 class="text-2xl font-extralight text-text/80 mb-16">Profile</h2>
        <ProfileCard />
      </div>
    </section>

    <!-- Timeline Section -->
    <section class="py-12">
      <div class="max-w-4xl mx-auto px-6">
        <h2 class="text-2xl font-extralight text-text/80 mb-16">Timeline</h2>

        <ol class="relative border-l border-accent/30">
          <TimelineItem
            title="静岡県生まれ"
            date="1999/11/02"
            description="浜松市出身。幼少期から電子工作やプログラミングに興味を持つ。"
          />

          <TimelineItem
            title="静岡県立浜松北高校 入学"
            date="2015/04"
            description="地元の進学校に入学。そこで様々な分野に触れる。"
          />

          <TimelineItem
            title="東京大学 教養学部 文科二類 入学"
            date="2018/04"
            description="当初は文系として入学するも、授業を通じてプログラミングや人工知能に強い関心を持つようになる。"
          />

          <TimelineItem
            title="東京大学 工学部"
            date="2020/04"
            links={[
              {
                href: "https://www.ee.t.u-tokyo.ac.jp/",
                text: "電子情報工学科"
              }
            ]}
            details={[
              {
                icon: "mdi:school-outline",
                content: "峯松研究室",
                isLink: true,
                href: "https://www.gavo.t.u-tokyo.ac.jp/"
              },
              {
                icon: "mdi:trophy-outline",
                content: "2022年度 <span class=\"text-accent\">工学部長賞 (研究)</span> 受賞"
              },
              {
                icon: "mdi:file-document-outline",
                content: "卒業論文: 「咽喉マイクを用いた 背景雑音に頑健な 英語シャドーイング音声の自動評価」"
              },
              {
                icon: "mdi:briefcase-outline",
                content: "株式会社Stroboでインターン"
              }
            ]}
          />

          <TimelineItem
            title="日本マイクロソフト株式会社 入社"
            date="2022/04"
            details={[
              {
                icon: "mdi:microsoft",
                content: "Microsoft Teams サポート エンジニア"
              },
              {
                icon: "mdi:information-outline",
                content: "企業のIT導入支援やトラブルシューティングを担当"
              }
            ]}
          />

          <TimelineItem
            title="株式会社picon 入社"
            date="2023/04"
            isLast={true}
            details={[
              {
                icon: "mdi:code-tags",
                content: "Senior Software Engineer"
              },
              {
                icon: "mdi:lightbulb-outline",
                content: "新規事業開発を中心としたソフトウェア開発"
              }
            ]}
          />
        </ol>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="py-24">
      <div class="max-w-4xl mx-auto px-6">
        <h2 class="text-2xl font-extralight text-text/80 mb-16">Skills</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <SkillCard
            title="Programming"
            icon="mdi:code-tags"
            skills={[
              "JavaScript / TypeScript",
              "Python",
              "C / C++",
              "HTML / CSS",
              "SQL"
            ]}
          />
          
          <SkillCard
            title="Frameworks & Libraries"
            icon="mdi:web"
            skills={[
              "React / Next.js",
              "Astro",
              "TailwindCSS",
              "Node.js / Express",
              "PyTorch / TensorFlow"
            ]}
          />
          
          <SkillCard
            title="Tools & Platforms"
            icon="mdi:tools"
            skills={[
              "Git / GitHub",
              "Docker",
              "AWS / Azure",
              "Linux / Unix",
              "VSCode / JetBrains IDE"
            ]}
          />
        </div>
      </div>
    </section>

    <!-- Awards Section -->
    <section class="py-24">
      <div class="max-w-4xl mx-auto px-6">
        <h2 class="text-2xl font-extralight text-text/80 mb-16">Awards</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <AwardCard
            title="アントレプレナーシップ・チャレンジ2020"
            badge="第3位"
            date="2020年9月"
            description="学生向けのビジネスコンテストで、学校現場における生徒のメンタルヘルスケアアプリ「Moodify」を提案し、第3位を受賞。"
          />

          <AwardCard
            title="東京大学 工学部長賞"
            badge="研究"
            date="2022年3月"
            description="卒業研究「咽喉マイクを用いた背景雑音に頑健な英語シャドーイング音声の自動評価」に対して授与。"
          />

          <AwardCard
            title="日本音響学会 学生優秀発表賞"
            badge="第24回"
            date="2022年9月"
            description="音声処理技術に関する研究発表が評価され、日本音響学会より学生優秀発表賞を受賞。"
            link={{
              href: "#",
              text: "詳細リンク"
            }}
          />
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  /* Add custom animations for timeline items */
  .timeline-item {
    transition: all 0.3s ease;
  }

  .timeline-item:hover {
    transform: translateX(5px);
  }
</style>
