---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Experiences | Tokiya's Portfolio">
  <Header />

  <main class="container mx-auto px-8 pt-24">
    <!-- Hero Section -->
    <section class="py-16">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl text-gold mb-8">Experiences</h1>
      </div>
    </section>

    <!-- Work Experience Section -->
    <section class="py-8">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-light text-white mb-8">Work Experience</h2>

        <div class="space-y-12">
          <div class="bg-navy-light rounded-xl p-8">
            <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
              <h3 class="text-xl font-semibold text-gold">Microsoft Japan</h3>
              <span class="text-white/60 text-sm">April 2022 - Present</span>
            </div>
            <p class="text-white/80 mb-4">Microsoft Teams Support Engineer</p>
            <ul class="list-disc list-inside text-white/80 space-y-2">
              <li>Providing technical support for Microsoft Teams</li>
              <li>Troubleshooting complex issues and escalating when necessary</li>
              <li>Collaborating with global teams to resolve customer problems</li>
            </ul>
          </div>

          <div class="bg-navy-light rounded-xl p-8">
            <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
              <h3 class="text-xl font-semibold text-gold">Strobo Inc.</h3>
              <span class="text-white/60 text-sm">Summer 2021</span>
            </div>
            <p class="text-white/80 mb-4">Engineering Intern</p>
            <ul class="list-disc list-inside text-white/80 space-y-2">
              <li>Developed features for web applications</li>
              <li>Worked with modern JavaScript frameworks</li>
              <li>Participated in code reviews and team meetings</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section class="py-16">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-light text-white mb-8">Projects</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="bg-navy-light rounded-xl overflow-hidden">
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gold mb-2">Graduation Thesis</h3>
              <p class="text-white/80 text-sm mb-4">Automatic evaluation of English shadowing speech using a throat microphone robust to background noise</p>
              <div class="flex space-x-2">
                <span class="bg-navy px-2 py-1 rounded text-xs text-white/60">Speech Processing</span>
                <span class="bg-navy px-2 py-1 rounded text-xs text-white/60">Machine Learning</span>
              </div>
            </div>
          </div>

          <div class="bg-navy-light rounded-xl overflow-hidden">
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gold mb-2">Portfolio Website</h3>
              <p class="text-white/80 text-sm mb-4">Personal portfolio website built with Astro and TailwindCSS</p>
              <div class="flex space-x-2">
                <span class="bg-navy px-2 py-1 rounded text-xs text-white/60">Astro</span>
                <span class="bg-navy px-2 py-1 rounded text-xs text-white/60">TailwindCSS</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="py-16">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-light text-white mb-8">Skills</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-navy-light rounded-xl p-6">
            <h3 class="text-xl font-semibold text-gold mb-4">Programming</h3>
            <ul class="space-y-2 text-white/80">
              <li>JavaScript / TypeScript</li>
              <li>Python</li>
              <li>C++</li>
              <li>HTML / CSS</li>
            </ul>
          </div>

          <div class="bg-navy-light rounded-xl p-6">
            <h3 class="text-xl font-semibold text-gold mb-4">Frameworks</h3>
            <ul class="space-y-2 text-white/80">
              <li>React</li>
              <li>Next.js</li>
              <li>Astro</li>
              <li>TailwindCSS</li>
            </ul>
          </div>

          <div class="bg-navy-light rounded-xl p-6">
            <h3 class="text-xl font-semibold text-gold mb-4">Tools</h3>
            <ul class="space-y-2 text-white/80">
              <li>Git</li>
              <li>VS Code</li>
              <li>Docker</li>
              <li>Azure</li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>