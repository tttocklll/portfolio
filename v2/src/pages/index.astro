---
import tttocklllLogo from "../assets/tttocklll.svg";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Profile from "../components/Profile.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Tokiya's Portfolio">
	<Header />

	<main>
		<!-- Hero Section - Full viewport height with just the name -->
		<section class="h-screen flex flex-col items-center justify-center relative">
			<div class="text-center">
				<img
					src={tttocklllLogo.src}
					alt="tttocklll"
					class="h-64"
				/>
			</div>
			
			<!-- Enhanced Scroll Indicator -->
			<div class="absolute bottom-8 left-0 right-0 flex flex-col items-center">
				<span class="text-text/30 text-xs font-extralight mb-2">SCROLL</span>
				<div class="scroll-indicator-line">
					<div class="scroll-indicator-dot"></div>
				</div>
			</div>
		</section>

		<!-- Introduction Section - Below the first view -->
		<Profile />
	</main>

	<Footer />
</Layout>

<style>
	/* Enhanced scroll indicator */
	@keyframes scrollDown {
		0% { transform: translateY(0); opacity: 1; }
		100% { transform: translateY(20px); opacity: 0; }
	}

	.scroll-indicator-line {
		position: relative;
		width: 1px;
		height: 40px;
		background-color: var(--color-accent);
		opacity: 0.4;
	}

	.scroll-indicator-dot {
		position: absolute;
		top: 0;
		left: 0;
		transform: translateX(-50%);
		width: 5px;
		height: 5px;
		background-color: var(--color-accent);
		border-radius: 50%;
		animation: scrollDown 1.8s infinite ease-out;
	}
</style>
