---
import tttocklllLogo from "../assets/tttocklll.svg";
import ProfileCard from "../components/ProfileCard.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home | tttocklll">
	<main>
		<!-- Hero Section -->
		<section class="h-screen flex flex-col items-center justify-center relative section-separator">
			<div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
			<div class="absolute right-0 top-0 w-96 h-96 bg-accent/8 rounded-full blur-3xl -z-10 transform translate-x-1/3 -translate-y-1/3"></div>
			<div class="absolute left-0 bottom-0 w-80 h-80 bg-accent/5 rounded-full blur-3xl -z-10 transform -translate-x-1/3 translate-y-1/3"></div>
			<div class="text-center relative z-10">
				<img
					src={tttocklllLogo.src}
					alt="tttocklll"
					class="h-40 sm:h-48 md:h-64 w-auto"
				/>
				<p class="mt-4 text-text/50 font-light text-responsive-base tracking-wider">Software Engineer / AI Enthusiast</p>
			</div>

			<div class="scroll-indicator">
				<span class="text-responsive-sm scroll-text">scroll</span>
				<div class="scroll-line">
					<div class="scroll-dot"></div>
				</div>
			</div>
		</section>

		<!-- Introduction Section -->
		<section class="py-12 relative overflow-hidden section-separator">
			<div class="absolute left-0 bottom-1/4 w-72 h-72 bg-accent/5 rounded-full blur-3xl -z-10 transform -translate-x-1/2"></div>
			<div class="absolute right-0 top-1/3 w-64 h-64 bg-accent/3 rounded-full blur-3xl -z-10 transform translate-x-1/3"></div>
			<div class="max-w-4xl mx-auto px-6 relative z-10">
				<h2 class="text-2xl font-light text-accent mb-16">Profile</h2>
				<div class="scroll-fade-in">
					<ProfileCard />
				</div>
			</div>
		</section>
	</main>
</Layout>

<script>
	import "../scripts/scroll-animation";
</script>

<style>
	.scroll-indicator {
		position: absolute;
		bottom: 1.5rem;
		left: 0;
		right: 0;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
	}

	.scroll-text {
		font-size: 0.75rem;
		text-transform: lowercase;
		letter-spacing: 0.1rem;
		color: var(--color-text);
		opacity: 0.3;
		font-weight: 300;
	}

	.scroll-line {
		position: relative;
		width: 1px;
		height: 3rem;
		background-color: var(--color-accent);
		opacity: 0.4;
	}

	.scroll-dot {
		position: absolute;
		top: 0;
		left: 0;
		width: 3px;
		height: 3px;
		background-color: var(--color-accent);
		border-radius: 50%;
		animation: scrollDown 1.5s infinite ease-in-out;
	}

	@keyframes scrollDown {
		0% {
			transform: translate(-1px, 0);
			opacity: 1;
		}
		100% {
			transform: translate(-1px, 3rem);
			opacity: 0;
		}
	}
</style>
