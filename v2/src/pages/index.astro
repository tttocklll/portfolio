---
import tttocklllLogo from "../assets/tttocklll.svg";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Profile from "../components/Profile.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Tokiya's Portfolio">
	<Header />

	<main>
		<!-- Hero Section - Full viewport height with just the name -->
		<section class="h-screen flex flex-col items-center justify-center">
			<div class="text-center">
				<img
					src={tttocklllLogo.src}
					alt="tttocklll"
					class="h-64"
				/>
			</div>
		</section>

		<!-- Introduction Section - Below the first view -->
		<Profile />
	</main>

	<Footer />
</Layout>

<style>
	/* Add a subtle scroll indicator */
	@keyframes fadeInOut {
		0%, 100% { opacity: 0.3; }
		50% { opacity: 0.8; }
	}

	section:first-of-type::after {
		content: "";
		position: absolute;
		bottom: 2rem;
		left: 50%;
		transform: translateX(-50%);
		width: 1px;
		height: 3rem;
		background-color: var(--color-accent);
		animation: fadeInOut 2s infinite;
	}
</style>
